<!-- FAILURE.html -->
<!DOCTYPE html>
<html>
<head>
  <title>Failure</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="flex items-center justify-center h-full">
    <div class="bg-white p-8 rounded-lg shadow-lg text-center max-w-md mx-auto">
      <img src="https://cdn.iconscout.com/icon/free/png-256/free-system-error-1550732-1316130.png" alt="Failure Image" class="mx-auto mb-6">
      <h1 class="text-4xl font-bold text-red-600 mb-4">Something went wrong!</h1>
      <p class="text-lg text-gray-700 mb-6">We're sorry, but something went wrong. Please try again.</p>
      <br>
      <a href="<%= root_path %>" class="inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Go Back to Home</a>
    </div>
  </div>
</body>
</html>
