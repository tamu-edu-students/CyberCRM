<% if ['student_worker', 'program_director', 'super_user'].include?(current_user.role) %>
  <div class="mx-auto md:w-2/3 w-full flex">
    <%= render 'layouts/navbar' %>
    <div class="mx-auto">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <div id="<%= dom_id @student %>">
        <p class="my-5">
          <strong class="block font-medium mb-1">Name:</strong>
          <%= @student.name %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">UIN:</strong>
          <%= @student.uin %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Grade:</strong>
          <%= @student.grade_ryg %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Gender:</strong>
          <%= @student.gender %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Ethnicity:</strong>
          <%= @student.ethnicity %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Nationality:</strong>
          <%= @student.nationality %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Expected graduation:</strong>
          <%= @student.expected_graduation %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">University classification:</strong>
          <%= @student.university_classification %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Status:</strong>
          <%= @student.status %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Sexual Orientation:</strong>
          <%= @student.sexual_orientation %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Date of Birth:</strong>
          <%= @student.date_of_birth %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Email:</strong>
          <%= @student.email %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Programs:</strong>
          <%= @student.programs.map(&:name).join(', ') %>
        </p>
      </div>

      <%= link_to "Edit this student", edit_student_path(@student), data: { turbo: false }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to students", students_path, data: { turbo: false }, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to "Delete this student", @student, data: { turbo: false }, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    </div>
  </div>
<% end %>
